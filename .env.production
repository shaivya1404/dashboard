# =============================================================
# PRODUCTION ENVIRONMENT â€” GCP Compute Engine
# Copy this to .env and fill in your values before deploying
# =============================================================

# --- Application ---
NODE_ENV=production
PORT=3000
BASE_URL=https://your-domain.com
PUBLIC_SERVER_URL=https://your-domain.com
FRONTEND_URL=https://your-domain.com
VITE_API_BASE_URL=https://your-domain.com/api
ALLOWED_ORIGINS=https://your-domain.com

# --- Database (PostgreSQL) ---
POSTGRES_USER=voiceai
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=voice_ai_dashboard

# --- JWT & Security ---
JWT_SECRET=CHANGE_ME_64_CHAR_RANDOM_STRING_HERE
API_KEY_SECRET=CHANGE_ME_64_CHAR_RANDOM_STRING_HERE

# --- Twilio ---
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+91xxxxxxxxxx
TWILIO_WEBHOOK_SECRET=CHANGE_ME_WEBHOOK_SECRET

# --- OpenAI ---
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# --- STT/TTS Provider ---
# 'custom' = call your external ML services (Whisper + XTTS from your other project)
# 'openai' = call OpenAI APIs (Whisper API + TTS API)
STT_PROVIDER=custom
TTS_PROVIDER=custom

# External ML service URLs (your other project running separately)
# If both projects on same GCP VM: use localhost
# If separate VMs: use the ML service VM's IP/domain
STT_SERVICE_URL=http://localhost:8002
TTS_SERVICE_URL=http://localhost:8001

# --- Razorpay (optional) ---
# RAZORPAY_KEY_ID=rzp_live_xxxxx
# RAZORPAY_KEY_SECRET=xxxxxxxxxxxxx

# --- Email SMTP (optional) ---
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your@email.com
# SMTP_PASSWORD=app-password

# --- Company Info ---
COMPANY_NAME=Oolix.in
COMPANY_EMAIL=info@oolix.in
