# ============================================
# VOICE AI DASHBOARD - ENVIRONMENT CONFIGURATION
# ============================================

# Application Settings
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# TWILIO CONFIGURATION (Required)
# ============================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_SECRET=your_twilio_webhook_secret_here

# ============================================
# OPENAI CONFIGURATION (Required)
# ============================================
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview

# ============================================
# DATABASE CONFIGURATION (Required)
# ============================================
# SQLite (for development)
DATABASE_URL=file:./dev.db
# PostgreSQL (for production) - change schema.prisma provider to "postgresql"
# DATABASE_URL=postgresql://user:password@localhost:5432/voice_ai_dashboard?schema=public

# ============================================
# RECORDING STORAGE
# ============================================
RECORDING_STORAGE_PATH=./recordings
RECORDING_DOWNLOAD_TOKEN=optional_token_for_public_downloads
MAX_RECORDING_SIZE_MB=100

# ============================================
# JWT & SECURITY (Required for production)
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secure-jwt-secret-at-least-64-characters-long
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# API Key encryption secret
API_KEY_SECRET=your-secure-api-key-secret-at-least-64-characters-long

# Security settings
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_HOURS=24
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# ============================================
# RAZORPAY PAYMENT GATEWAY
# ============================================
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Voice AI Dashboard

# SMS Configuration
SMS_ENABLED=false

# ============================================
# COMPANY INFORMATION (for invoices)
# ============================================
COMPANY_NAME=Your Company Name
COMPANY_ADDRESS=123 Business Street, City, State, Country - 123456
COMPANY_PHONE=+91 1234567890
COMPANY_EMAIL=billing@yourcompany.com
COMPANY_GST=XXAXXXXXXXX1ZX
COMPANY_LOGO_URL=https://yourcompany.com/logo.png

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10

# ============================================
# CACHING (Optional - Redis)
# ============================================
# REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=300

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_AUDIT_LOGS=true

# ============================================
# FILE UPLOAD
# ============================================
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=csv,xlsx,pdf,wav,mp3

# ============================================
# BACKUP CONFIGURATION (Optional)
# ============================================
BACKUP_ENABLED=false
BACKUP_CRON=0 2 * * *
BACKUP_RETENTION_DAYS=30
# BACKUP_S3_BUCKET=your-backup-bucket
# AWS_ACCESS_KEY_ID=XXXXXXXXXXXXXXXXXXXX
# AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# AWS_REGION=us-east-1
